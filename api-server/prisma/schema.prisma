generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  password  String      @default("") // Temporary default to avoid migration issues with existing data
  name      String?
  avatar    String?
  role      Role        @default(USER)
  studentId String?
  isActive  Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  auditLogs     AuditLog[]
  joins          JoinEvent[]
  photos         Photo[]
  badges         UserBadge[]
  level          UserLevel?
  activityLogs   EventActivityLog[]
}

model Event {
  id                 String      @id @default(uuid())
  title              String
  description        String?
  eventDates         DateTime[]
  location           String?
  coverImage         String?
  joinLimit          Int         @default(0)
  activityHours      Int         @default(0)
  submissionDeadline DateTime?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  status             EventStatus @default(UPCOMING)
  joins              JoinEvent[]
  photos             Photo[]
  activityLogs       EventActivityLog[]
}

model JoinEvent {
  id       String   @id @default(uuid())
  userId   String
  eventId  String
  joinedAt DateTime @default(now())
  event    Event    @relation(fields: [eventId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@unique([userId, eventId])
}

model Photo {
  id           String    @id @default(uuid())
  url          String
  thumbnailUrl String?
  filename     String
  mimeType     String
  size         Int
  width        Int?
  height       Int?
  metadata     Json?
  type         PhotoType @default(RAW)
  isApproved   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  userId       String
  eventId      String
  event        Event     @relation(fields: [eventId], references: [id])
  user         User      @relation(fields: [userId], references: [id])
}

enum PhotoType {
  RAW
  EDITED
}

model Badge {
  id          String      @id @default(uuid())
  name        String
  description String
  iconUrl     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  users       UserBadge[]
}

model UserBadge {
  id        String   @id @default(uuid())
  userId    String
  badgeId   String
  awardedAt DateTime @default(now())
  badge     Badge    @relation(fields: [badgeId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, badgeId])
}

model UserLevel {
  id        String   @id @default(uuid())
  userId    String   @unique
  exp       Int      @default(0)
  level     Int      @default(1)
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  action    String
  details   Json?
  ipAddress String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum EventStatus {
  UPCOMING
  PENDING_RAW
  PENDING_EDIT
  COMPLETED
}

enum EventAction {
  USER_JOINED
  USER_LEFT
  PHOTO_UPLOADED
  PHOTO_DELETED
  STATUS_CHANGED
  EVENT_UPDATED
}

model EventActivityLog {
  id        String      @id @default(uuid())
  eventId   String
  userId    String?
  action    EventAction
  details   Json?
  createdAt DateTime    @default(now())
  event     Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User?       @relation(fields: [userId], references: [id])
}
